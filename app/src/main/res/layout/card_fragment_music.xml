<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" app:cardBackgroundColor="@color/dark_gray"
            android:layout_height="wrap_content" android:layout_width="wrap_content" app:cardElevation="4dp">

<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                   android:id="@+id/card_view"  android:orientation="vertical">
    <ImageView android:layout_width="120dp" android:layout_height="170dp" android:id="@+id/musicThumbnail" android:scaleType="fitXY"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/artist" android:text="Title"
              android:fontFamily="@font/roboto" android:textColor="@color/white" android:textStyle="bold" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/title"
              android:text="music" android:fontFamily="@font/roboto" android:textColor="@color/white" />
</LinearLayout>

    </androidx.cardview.widget.CardView>
