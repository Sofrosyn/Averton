<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.activities.HomeActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_horizontal_ntb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <!--        app:layout_behavior=".ui.views.BottomNavigationBehavior"-->
    <LinearLayout
        android:layout_gravity="bottom"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
                android:id="@+id/top_navigation_constraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:elevation="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:bnc_mode="spread"
                app:hideOnScroll="true"

        >
            <com.gauravk.bubblenavigation.BubbleToggleView
                    android:id="@+id/l_item_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bt_icon="@drawable/ic_home"
                    app:bt_iconHeight="20dp"
                    app:bt_iconWidth="20dp"
                    app:bt_colorInactive="@color/white"
                    app:bt_colorActive="@color/blue"
                    app:bt_shape="@drawable/bg_background_yellow"
                    app:bt_title="Home"/>

            <com.gauravk.bubblenavigation.BubbleToggleView
                    android:id="@+id/l_item_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bt_iconHeight="20dp"
                    app:bt_iconWidth="20dp"

                    app:bt_colorActive="@color/blue"
                    app:bt_colorInactive="@color/white"
                    app:bt_shape="@drawable/bg_background_yellow"
                    app:bt_icon="@drawable/ic_tv_show"
                    app:bt_title="Movies"/>

            <com.gauravk.bubblenavigation.BubbleToggleView
                    android:id="@+id/l_item_profile_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bt_iconHeight="20dp"
                    app:bt_iconWidth="20dp"
                    app:bt_colorInactive="@color/white"
                    app:bt_colorActive="@color/blue"
                    app:bt_shape="@drawable/bg_background_yellow"
                    app:bt_icon="@drawable/ic_equalizer_black_24dp"
                    app:bt_title="Music"/>


            <com.gauravk.bubblenavigation.BubbleToggleView
                    android:id="@+id/l_ite_profi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bt_iconHeight="20dp"
                    app:bt_iconWidth="20dp"
                    app:bt_colorInactive="@color/white"
                    app:bt_colorActive="@color/blue"
                    app:bt_shape="@drawable/bg_background_yellow"
                    app:bt_icon="@drawable/ic_directions_run_black_24dp"
                    app:bt_title="Sports" />


            <com.gauravk.bubblenavigation.BubbleToggleView
                    android:id="@+id/l_item_profileist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bt_iconHeight="20dp"
                    app:bt_iconWidth="20dp"
                    app:bt_colorInactive="@color/white"
                    app:bt_colorActive="@color/blue"
                    app:bt_shape="@drawable/bg_background_yellow"
                    app:bt_icon="@drawable/ic_aspect_ratio_black_24dp"
                    app:bt_title="News" />

        </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

    </LinearLayout>
    <LinearLayout
        app:layout_scrollFlags="scroll|enterAlways|snap"
        android:background="@drawable/bg_gradient"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_marginTop="25dp"
                android:background="@color/transparent"
                android:visibility="gone"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/CustomActionBar"
                />
