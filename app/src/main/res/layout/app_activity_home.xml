<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     android:background="@color/black"
                                                     tools:context=".ui.activities.HomeActivity">




    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toTopOf="parent" android:layout_above="@id/bottom_nav_home"
    android:id="@+id/home_activity_framelayout" />

    <com.google.android.material.bottomnavigation.BottomNavigationView android:layout_width="match_parent" app:menu="@menu/menu_bottom_nav" app:layout_constraintLeft_toLeftOf="parent"
                                                                       android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                                                                       android:id="@+id/bottom_nav_home"

                                                                       app:itemTextColor="@color/white"
                                                                       app:backgroundTint="@color/gray"
                                                                       app:hideOnScroll="true"
                                                                       app:labelVisibilityMode="labeled"
                                                                   app:elevation="4dp"
                                                                       />





</RelativeLayout>