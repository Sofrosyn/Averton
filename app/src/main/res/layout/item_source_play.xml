<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_item_source_type_image"
                android:tint="@color/black"
                android:background="#c8ffffff"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_mp4_file"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:padding="6dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_marginRight="55dp"
                android:layout_marginLeft="55dp"
                android:background="#c8ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/text_view_item_source_type"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Mp4 Source"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/text_view_item_source_source"
                    android:textSize="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:text="https://www.youtube.com/watch?v=hHW1oY26kxQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:background="#c8ffffff"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/image_view_item_source_type_play"
                    android:padding="4dp"
                    android:tint="@color/black"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_play"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>