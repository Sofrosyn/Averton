<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.DocumentaryFragment">

<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Documentary" android:textSize="40sp"
              android:fontFamily="@font/nexa" android:layout_centerHorizontal="true" android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp" android:src="@drawable/logo" android:scaleType="fitCenter" android:visibility="gone"
            android:layout_height="50dp" android:layout_marginLeft="8dp" android:layout_centerVertical="true"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent" android:layout_marginTop="8dp"
        android:layout_height="wrap_content" android:id="@+id/fragment_documentary_recycler_view"/>


</LinearLayout>
</FrameLayout>
